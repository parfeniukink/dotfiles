// To view the default settings, hold "alt" while clicking on the "Settings" button.
// For documentation on these settings, see: https://aka.ms/terminal-documentation
{
  "$schema": "https://aka.ms/terminal-profiles-schema",
  "defaultProfile": "{c6eaf9f4-32a7-5fdc-b5cf-066e8a4b1e40}",
  // "colorScheme": "One Half Dark",
  "profiles": [
    {
      // Make changes here to the powershell.exe profile
      "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
      "name": "Windows PowerShell",
      "commandline": "powershell.exe",
      "hidden": false,
      "fontFace": "Consolas",
      "fontSize": 12,
      "acrylicOpacity": 0.8,
      "useAcrylic": true,
      "background": "#003283",
      "colorScheme": "Campbell"
    },
    {
      // Make changes here to the cmd.exe profile
      "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
      "name": "cmd",
      "commandline": "cmd.exe",
      "hidden": false,
      "fontFace": "Consolas",
      "fontSize": 12,
      "acrylicOpacity": 0.75,
      "useAcrylic": true
    },
    {
      "guid": "{c6eaf9f4-32a7-5fdc-b5cf-066e8a4b1e40}",
      "hidden": false,
      "name": "Ubuntu-18.04",
      "source": "Windows.Terminal.Wsl",
      "acrylicOpacity": 0.9,
      "useAcrylic": true,
      "padding": "10, 10, 10, 10",
      "snapOnInput": true,
      "fontFace": "Consolas",
      "fontSize": 14,
      "startingDirectory": "/mnt/c/Users/sweet/Code",
      "colorScheme": "Campbell"
    },
    {
      "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
      "hidden": true,
      "name": "Azure Cloud Shell",
      "source": "Windows.Terminal.Azure"
    }
  ],
  // Add custom color schemes to this array
  "schemes": [
    {
      "name": "Campbell",
      "foreground": "#b3b3b3",
      "background": "#1e1f20",
      "black": "#000000",
      "red": "#C50F1F",
      // Folder background
      "green": "#46662e",
      "yellow": "#C19C00",
      // Folder name
      "blue": "#8aa4eb",
      "purple": "#881798",
      "cyan": "#76b3c5",
      "white": "#CCCCCC",
      "brightBlack": "#3b4356",
      "brightRed": "#eb4155",
      // Files color
      "brightGreen": "#b98f8e",
      "brightYellow": "#e5c078",
      // Hidden folders
      "brightBlue": "#1478a0",
      "brightPurple": "#a3799d",
      "brightCyan": "#7daeac",
      "brightWhite": "#38518b",
      "selectionBackground": "#708dcf"
    }
  ],

  // Add any keybinding overrides to this array.
  // To unbind a default keybinding, set the command to "unbound"
  "keybindings": [
    {
      "command": "closeTab",
      "keys": ["ctrl+shift+w"]
    },
    {
      "command": "newTab",
      "keys": ["ctrl+shift+t"]
    },
    {
      "command": "copy",
      "keys": ["ctrl+insert"]
    },
    {
      "command": "paste",
      "keys": ["shift+insert"]
    },
    {
      "command": "prevTab",
      "keys": ["alt+j"]
    },
    {
      "command": "nextTab",
      "keys": ["alt+k"]
    },
    {
      "command": "scrollUp",
      "keys": ["alt+up"]
    },
    {
      "command": "scrollDown",
      "keys": ["alt+down"]
    },
    {
      "command": "scrollUpPage",
      "keys": ["alt+pageup"]
    },
    {
      "command": "scrollDownPage",
      "keys": ["alt+pagedown"]
    },
    // Pane key binds
    {
      "command": {
        "action": "resizePane",
        "direction": "down"
      },
      "keys": "alt+shift+down"
    },
    {
      "command": {
        "action": "resizePane",
        "direction": "left"
      },
      "keys": "alt+shift+left"
    },
    {
      "command": {
        "action": "resizePane",
        "direction": "right"
      },
      "keys": "alt+shift+right"
    },
    {
      "command": {
        "action": "resizePane",
        "direction": "up"
      },
      "keys": "alt+shift+up"
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "down"
      },
      "keys": "alt+down"
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "left"
      },
      "keys": "alt+left"
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "right"
      },
      "keys": "alt+right"
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "up"
      },
      "keys": "alt+up"
    },
    {
      "command": {
        "action": "splitPane",
        "split": "auto",
        "splitMode": "duplicate"
      },
      "keys": "alt+shift+d"
    },
    {
      "command": {
        "action": "splitPane",
        "split": "vertical",
        "profile": "{c6eaf9f4-32a7-5fdc-b5cf-066e8a4b1e40}"
      },
      "keys": "alt+shift+1"
    }
  ]
}
